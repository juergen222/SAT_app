<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/scoreboard"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="80dp"

        android:textSize="40sp"
        android:id="@+id/first_player"
        android:textColor="@android:color/black"


        />
    <include
    android:id="@+id/toolbar"
    layout="@layout/toolbar"
    />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="325dp"
        android:layout_marginLeft="80dp"

        android:textSize="40sp"
        android:id="@+id/second_player"
        android:textColor="@android:color/black"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/reset_button"
        android:layout_marginTop="620sp"
        android:layout_marginLeft="110sp"
        android:id="@+id/reset_button"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="170dp"
        android:textSize="40sp"
        android:id="@+id/first_score"
        android:textColor="@android:color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="325dp"
        android:layout_marginLeft="170dp"

        android:textSize="40sp"
        android:id="@+id/second_score"
        android:textColor="@android:color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="170dp"

        android:textSize="40sp"
        android:id="@+id/third_score"
        android:textColor="@android:color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="80dp"

        android:textSize="40sp"
        android:id="@+id/third_player"
        android:textColor="@android:color/black"
        android:layout_marginStart="80dp" />
</RelativeLayout>